{
  "name": "Simplify SEP",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Make the Stanford Encyclopedia of Philosophy simpler and easier to use",
  "homepage_url": "http://andrewshen.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "http://plato.stanford.edu/*",
    "https://plato.stanford.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://plato.stanford.edu/*",
        "https://plato.stanford.edu/*"
      ],
      "css": ["src/inject/inject.css"],
      "js": ["src/inject/inject.js"]
    }
  ]
}
